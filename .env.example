# AI Assistant Configuration Template v0.1.1
# Copy this file to .env and customize the values for your setup
# This file contains ALL required configuration - no hardcoded defaults exist

# LM Studio Configuration (for chat model)
LM_STUDIO_URL=http://192.168.0.203:1234/v1
LM_STUDIO_KEY=lm-studio
MODEL_NAME=qwen3-vl-30b

# Vector Database Configuration (REQUIRED)
CHROMA_HOST=192.168.0.204
CHROMA_PORT=8000

# Ollama Configuration (for embeddings)
OLLAMA_BASE_URL=http://192.168.0.204:11434
EMBEDDING_MODEL=qwen3-embedding:latest

# Application Settings (Conversation Memory)
MAX_HISTORY_PAIRS=100
TEMPERATURE=0.3
MAX_INPUT_LENGTH=10000

# Verbose Logging (Show detailed AI processing steps)
VERBOSE_LOGGING=true
SHOW_LLM_REASONING=true
SHOW_TOKEN_USAGE=true
SHOW_TOOL_DETAILS=true

# File Paths (SQLite databases are organized in db/ folder)

# Database Configuration
DB_TYPE=sqlite
DB_PATH=db/history.db

# System Environment Variables
# Workaround for OpenMP library conflicts with Ollama
KMP_DUPLICATE_LIB_OK=TRUE
